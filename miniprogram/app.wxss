/**app.wxss**/
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
    sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
}

.btn {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #1890ff;
  color: white;
  border-radius: 4rpx;
  text-align: center;
  font-size: 14px;
}

.btn-primary {
  background-color: #1890ff;
  color: white;
}

.btn-success {
  background-color: #52c41a;
  color: white;
}

.btn-danger {
  background-color: #f5222d;
  color: white;
}

.btn:active {
  opacity: 0.8;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #f5222d;
}

.text-success {
  color: #52c41a;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

/* 响应式布局 */
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.col {
  flex: 1;
}

/* Loading */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

/* 错误提示 */
.error-message {
  background-color: #fff2f0;
  color: #ff4d4f;
  padding: 15rpx;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
}

/* 成功提示 */
.success-message {
  background-color: #f6ffed;
  color: #52c41a;
  padding: 15rpx;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
}
