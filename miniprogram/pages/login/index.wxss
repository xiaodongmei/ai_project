.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.login-wrapper {
  width: 100%;
  max-width: 400px;
  background-color: #fff;
  border-radius: 16px;
  padding: 40px 24px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 32px;
}

.logo {
  font-size: 64px;
  margin-bottom: 16px;
}

.title {
  font-size: 24px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 13px;
  color: #999;
}

/* 模式切换 */
.mode-tabs {
  display: flex;
  gap: 12px;
  margin-bottom: 24px;
  border-bottom: 1px solid #eee;
}

.mode-tab {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  font-size: 14px;
  color: #999;
  border-bottom: 2px solid transparent;
  cursor: pointer;
  transition: all 0.3s ease;
}

.mode-tab.active {
  color: #667eea;
  border-bottom-color: #667eea;
}

/* 登录表单 */
.login-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 24px;
}

.form-group {
  position: relative;
  display: flex;
  align-items: center;
}

.form-input {
  width: 100%;
  padding: 12px 16px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.form-input:focus {
  background-color: #fff;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

/* 密码组 */
.password-group {
  position: relative;
}

.password-toggle {
  position: absolute;
  right: 16px;
  font-size: 18px;
  cursor: pointer;
}

.form-input:last-child {
  padding-right: 40px;
}

/* 验证码组 */
.code-group {
  gap: 12px;
}

.code-group .form-input {
  flex: 1;
}

.code-btn {
  padding: 12px 16px;
  border: 1px solid #667eea;
  background-color: #fff;
  border-radius: 8px;
  color: #667eea;
  font-size: 12px;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.code-btn:active:not(:disabled) {
  background-color: #f0f4ff;
}

.code-btn:disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #ddd;
}

/* 按钮 */
.btn {
  padding: 14px 16px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  transition: all 0.3s ease;
  cursor: pointer;
  text-align: center;
}

.btn-primary {
  background-color: #667eea;
  color: #fff;
}

.btn-primary:active:not(:disabled) {
  background-color: #5568d3;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.btn-primary:disabled {
  background-color: #d9d9d9;
  color: #fff;
}

.btn-wechat {
  background-color: #09b981;
  color: #fff;
}

.btn-wechat:active:not(:disabled) {
  background-color: #059669;
  box-shadow: 0 4px 12px rgba(9, 185, 129, 0.3);
}

.btn-wechat:disabled {
  background-color: #d9d9d9;
  color: #fff;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  gap: 12px;
  margin: 24px 0;
}

.divider-line {
  flex: 1;
  height: 1px;
  background-color: #eee;
}

.divider-text {
  font-size: 12px;
  color: #999;
  white-space: nowrap;
}

/* 底部 */
.footer {
  text-align: center;
}

.footer-text {
  font-size: 11px;
  color: #999;
}

/* 响应式 */
@media (max-width: 375px) {
  .login-wrapper {
    padding: 32px 16px;
  }

  .logo {
    font-size: 48px;
  }

  .title {
    font-size: 20px;
  }
}
