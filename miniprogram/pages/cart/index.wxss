.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 空购物车 */
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  gap: 20px;
  background-color: #fff;
}

.empty-icon {
  font-size: 64px;
}

.empty-text {
  font-size: 16px;
  color: #999;
}

.btn {
  padding: 12px 32px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  width: 200px;
}

.btn-primary:active {
  background-color: #0050b3;
}

/* 购物车内容 */
.cart-content {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 购物车头部 */
.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  font-weight: 500;
}

.header-left {
  display: flex;
  gap: 8px;
  font-size: 14px;
}

.cart-count {
  color: #999;
  font-weight: normal;
}

.header-right {
  font-size: 12px;
  color: #1890ff;
}

.edit-btn {
  cursor: pointer;
}

/* 购物车列表 */
.cart-list {
  flex: 1;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.cart-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background-color: #fafafa;
  border-bottom: 1px solid #eee;
}

.checkbox-wrapper {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
}

.checkbox {
  width: 20px;
  height: 20px;
}

.delete-btn {
  color: #ff4d4f;
  font-size: 14px;
  cursor: pointer;
}

/* 购物车项 */
.cart-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #eee;
  gap: 12px;
}

.item-checkbox {
  display: flex;
  align-items: center;
}

.item-content {
  flex: 1;
  display: flex;
  gap: 12px;
  align-items: center;
}

.item-image {
  width: 80px;
  height: 80px;
  border-radius: 6px;
  object-fit: cover;
  background-color: #f5f5f5;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.item-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-specs {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.spec-tag {
  font-size: 11px;
  color: #999;
  background-color: #f5f5f5;
  padding: 2px 8px;
  border-radius: 3px;
}

.item-price {
  font-size: 14px;
  color: #ff4d4f;
  font-weight: 500;
}

.item-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  overflow: hidden;
}

.qty-btn {
  width: 28px;
  height: 28px;
  padding: 0;
  border: none;
  background-color: #f5f5f5;
  color: #333;
  font-size: 14px;
  line-height: 28px;
  text-align: center;
}

.qty-btn:active {
  background-color: #eee;
}

.qty-input {
  width: 40px;
  height: 28px;
  border: none;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  text-align: center;
  font-size: 12px;
}

.item-delete {
  font-size: 18px;
  cursor: pointer;
}

/* 购物车底部 */
.cart-footer {
  background-color: #fff;
  padding: 16px;
  border-top: 1px solid #eee;
}

.summary {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid #eee;
}

.summary-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.summary-label {
  font-size: 12px;
  color: #999;
}

.summary-value {
  font-size: 14px;
  color: #ff4d4f;
  font-weight: 500;
}

.footer-buttons {
  display: flex;
  gap: 12px;
}

.btn-secondary {
  flex: 1;
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-primary {
  flex: 1;
  background-color: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0050b3;
}

.btn-danger {
  flex: 1;
  background-color: #ff4d4f;
  color: #fff;
}

.btn-danger:active {
  background-color: #d9363e;
}
