.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  gap: 20px;
}

.empty-icon {
  font-size: 64px;
}

.empty-text {
  font-size: 16px;
  color: #999;
}

.btn {
  padding: 12px 32px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
  width: 200px;
}

.btn-primary:active {
  background-color: #0050b3;
}

/* 个人资料页面 */
.profile-content {
  padding-bottom: 20px;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  gap: 16px;
  padding: 20px 16px;
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%);
  color: #fff;
  margin-bottom: 12px;
}

.user-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  font-weight: 600;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.user-name {
  font-size: 18px;
  font-weight: 600;
}

.user-email {
  font-size: 13px;
  opacity: 0.9;
}

/* 数据统计 */
.statistics {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
  padding: 12px;
  background-color: #fff;
  margin-bottom: 12px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px;
  text-align: center;
}

.stat-value {
  font-size: 18px;
  font-weight: 600;
  color: #1890ff;
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* 分区 */
.section {
  background-color: #fff;
  margin: 0 0 12px 0;
  padding: 16px;
  border-bottom: 1px solid #eee;
}

.section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.section-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
}

.edit-btn {
  font-size: 12px;
  color: #1890ff;
  cursor: pointer;
}

/* 地址显示 */
.address-display {
  padding: 12px;
  background-color: #f9f9f9;
  border-radius: 6px;
}

.address-content {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.address-text {
  font-size: 13px;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

.phone-text {
  font-size: 12px;
  color: #999;
}

.empty-address {
  font-size: 13px;
  color: #999;
  padding: 20px;
  text-align: center;
}

/* 地址编辑 */
.address-edit {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.form-group label {
  font-size: 12px;
  color: #666;
  font-weight: 500;
}

.form-input {
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 13px;
  background-color: #fafafa;
}

textarea.form-input {
  min-height: 80px;
  resize: vertical;
}

.char-count {
  font-size: 11px;
  color: #999;
  text-align: right;
  margin-top: 4px;
}

.button-group {
  display: flex;
  gap: 12px;
  margin-top: 12px;
}

.btn-secondary {
  flex: 1;
  background-color: #fff;
  color: #333;
  border: 1px solid #ddd;
}

.btn-secondary:active {
  background-color: #f5f5f5;
}

.btn-primary {
  flex: 1;
  background-color: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0050b3;
}

/* 菜单项 */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-text {
  font-size: 13px;
  color: #333;
}

.menu-arrow {
  font-size: 16px;
  color: #999;
}

/* 登出部分 */
.logout-section {
  padding: 20px 16px;
  margin-top: 20px;
}

.btn-logout {
  width: 100%;
  background-color: #ff4d4f;
  color: #fff;
  padding: 12px 16px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
}

.btn-logout:active {
  background-color: #d9363e;
}
