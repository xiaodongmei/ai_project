.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  gap: 16px;
}

.spinner {
  width: 32px;
  height: 32px;
  border: 3px solid #f0f0f0;
  border-top-color: #1890ff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 产品图片 */
.image-section {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  background-color: #f5f5f5;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.featured-badge {
  position: absolute;
  top: 12px;
  right: 12px;
  background-color: #ff4d4f;
  color: #fff;
  padding: 6px 12px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

/* 产品信息容器 */
.product-info {
  background-color: #fff;
  padding: 16px;
}

.product-header {
  margin-bottom: 16px;
}

.product-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.4;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 12px;
  color: #999;
}

.stars {
  color: #ff9c00;
}

.sales-count {
  color: #999;
}

/* 价格部分 */
.price-section {
  margin-bottom: 16px;
  padding: 12px;
  background-color: #fff8e1;
  border-radius: 8px;
}

.price-group {
  display: flex;
  align-items: baseline;
  gap: 8px;
  margin-bottom: 8px;
}

.price-group:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 12px;
  color: #666;
}

.price {
  font-size: 20px;
  color: #ff4d4f;
  font-weight: 600;
}

.price-original {
  font-size: 14px;
  color: #999;
  text-decoration: line-through;
}

/* 库存信息 */
.stock-section {
  margin-bottom: 16px;
}

.stock-label {
  display: inline-block;
  padding: 4px 12px;
  background-color: #e8f5e9;
  color: #2e7d32;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

.stock-label.warning {
  background-color: #fff3e0;
  color: #e65100;
}

.stock-label.danger {
  background-color: #ffebee;
  color: #c62828;
}

/* 描述部分 */
.description-section,
.specifications-section {
  margin-bottom: 16px;
  padding-top: 16px;
  border-top: 1px solid #eee;
}

.section-title {
  font-size: 14px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12px;
}

.description-text {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8px;
}

.detailed-description {
  font-size: 13px;
  color: #999;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
}

/* 规格信息 */
.specs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.spec-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 12px;
  background-color: #f5f5f5;
  border-radius: 8px;
}

.spec-label {
  font-size: 12px;
  color: #999;
}

.spec-value {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

/* 购买选项 */
.purchase-section {
  padding-top: 16px;
  border-top: 1px solid #eee;
  margin-bottom: 16px;
}

.quantity-section {
  display: flex;
  align-items: center;
  gap: 12px;
}

.quantity-label {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

.quantity-control {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  overflow: hidden;
}

.qty-btn {
  width: 32px;
  height: 32px;
  padding: 0;
  border: none;
  background-color: #f5f5f5;
  color: #333;
  font-size: 16px;
  line-height: 32px;
  text-align: center;
}

.qty-btn:active {
  background-color: #eee;
}

.qty-input {
  width: 50px;
  height: 32px;
  border: none;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  text-align: center;
  font-size: 14px;
}

/* 底部操作栏 */
.action-buttons {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}

.btn {
  flex: 1;
  padding: 12px 16px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #1890ff;
  color: #fff;
}

.btn-primary:active {
  background-color: #0050b3;
}

.btn-secondary {
  background-color: #fff;
  color: #1890ff;
  border: 1px solid #1890ff;
}

.btn-secondary:active {
  background-color: #f0f7ff;
}

.btn-disabled {
  background-color: #f5f5f5;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  gap: 16px;
  color: #999;
}

.empty-icon {
  font-size: 48px;
}

.empty-text {
  font-size: 14px;
}
